{
  "compilerOptions": {
    /* ðŸ”¹ Output & Input */
    "rootDir": "./src",      // Keeps TypeScript source files inside "src/"
    "outDir": "./dist",      // Outputs compiled JavaScript files into "dist/"

    /* ðŸ”¹ Language Features */
    "target": "ES2020",      // Sets the JavaScript version for output
    "module": "CommonJS",    // Ensures compatibility with Node.js

    /* ðŸ”¹ Module Resolution */
    "moduleResolution": "node",
    "esModuleInterop": true,  // Fixes import issues for CommonJS modules
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* ðŸ”¹ Strict Type Checking */
    "strict": true,
    "noImplicitAny": true, 
    "strictNullChecks": true,  
    "strictFunctionTypes": true, 
    "strictBindCallApply": true, 
    "strictPropertyInitialization": true,  
    "noImplicitThis": true,  

    /* ðŸ”¹ Code Organization */
    "forceConsistentCasingInFileNames": true,  
    "skipLibCheck": true,  
    "removeComments": true,  
    "preserveConstEnums": true,  
    "noUnusedLocals": true,  
    "noUnusedParameters": true,  
    "noImplicitReturns": true,  
    "noFallthroughCasesInSwitch": true  
  },
  "include": ["src"],       // Compile only files in "src/"
  "exclude": ["node_modules", "dist"]  // Ignore compiled files & dependencies
}

